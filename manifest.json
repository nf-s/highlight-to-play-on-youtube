{
  "manifest_version": 2,

  "name": "Highlight Youtube Play",
  "description": "Highlight text to play youtube video",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
          "16": "16icon.ico",
          "48": "icon.png",
          "128": "icon_big.png"
        },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "search.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "web_accessible_resources": [
    "search.html",
    "search.js",
    "jquery.min.js",
    "stylce.css"
  ]
}